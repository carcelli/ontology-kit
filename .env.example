# Agent Kit Configuration

# OpenAI API Key (for OpenAI Agents SDK)
OPENAI_API_KEY=sk-...

# Agent Framework Selection
# Options: "custom", "openai_sdk", "langchain", "hybrid"
AGENT_FRAMEWORK=custom

# OpenAI SDK Integration
OPENAI_SDK_ENABLED=false

# Ontology Configuration
DEFAULT_ONTOLOGY_PATH=assets/ontologies/business.ttl
ENABLE_SHACL_VALIDATION=true

# Vector Store Configuration
FAISS_METRIC=cosine
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Logging
LOG_LEVEL=INFO
TRACE_ENABLED=false

# Development
DEBUG_MODE=false
